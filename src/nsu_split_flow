# Name      : nsu_split_flow
# Author    : Abhishek Tyai
# Purpsose  : To split the flow into 2 parts from selected page.
#
# Usage     :  nsu_split_flow <scriptPath> <Page_name> <flowName> <newFlowName>
#   e.g.  nsu_split_flow /home/cavisson/controller_abhishek/scripts/default/dafault/xyz login flow flow2
#
# Modification History:
#   12/08/18: Abhishek - Initial Version
#
#!/bin/sh
#Check and get login user name
USER_NAME=`whoami 2>/dev/null`
if [ $? != 0 ];then
  echo "Error: Unable to get the real user name"
  exit 1
fi

#Check and get script type and call appropriate class

SCRIPT_NAME_WITH_PATH=$2
WORK_PROFILE=`echo $SCRIPT_NAME_WITH_PATH | cut -d '/' '-f1-2'`
SCRIPT_NAME=`basename $SCRIPT_NAME_WITH_PATH`
PROJ_SUBPROJ=`dirname $SCRIPT_NAME_WITH_PATH | cut -d '/' '-f3-4'`
NS_RTA_DIR="workspace/$WORK_PROFILE/cavisson"
if [ ! -d $NS_WDIR/$NS_RTA_DIR/$PROJ_SUBPROJ/scripts/$SCRIPT_NAME ]; then
  echo "Error in getting script directory $SCRIPT_NAME_WITH_PATH"
  echo "Script may not be present"
  exit -1
fi

FLOW_NAME_WITH_PATH=$6

if [ ! -f $NS_WDIR/$NS_RTA_DIR/$PROJ_SUBPROJ/scripts/$SCRIPT_NAME/$FLOW_NAME_WITH_PATH ]; then
  echo "Error in getting flow file - $FLOW_NAME_WITH_PATH"
  echo "Flow may not be present"
  exit -1
fi

SCRIPT_TYPE=`nsu_script_tool -o GetScriptType -s $PROJ_SUBPROJ/"scripts"/$SCRIPT_NAME -w $WORK_PROFILE`
if [ $? != 0 ]; then
echo "Error in getting script type of script $SCRIPT_NAME_WITH_PATH"
  echo "Script may not be present"
fi

if [ "X$SCRIPT_TYPE" == "XC" ] || [ "X$SCRIPT_TYPE" == "XJAVA" ];then
  if [ -d /home/cavisson/monitors ];then
    java -cp $NS_WDIR/webapps/netstorm/WEB-INF/lib/netstorm_bean.jar:/home/cavisson/monitors/lib/java-getopt-1.0.9.jar -DNS_WDIR=$NS_WDIR pac1.Bean.SplitFlowFile $*
  else  
    java -cp $NS_WDIR/webapps/netstorm/WEB-INF/lib/netstorm_bean.jar:/opt/cavisson/monitors/lib/java-getopt-1.0.9.jar -DNS_WDIR=$NS_WDIR pac1.Bean.SplitFlowFile $*
  fi
  exit $?

fi

echo "Invalid script type $SCRIPT_TYPE"
exit -1
