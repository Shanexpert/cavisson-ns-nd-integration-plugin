#!/bin/sh
#----------------------------------------------------------------------
# Name    :    nsu_import_file
# Author  :    Ankur Nath Mishra
# Purpose :    This is a tool to files from remote machines
# USage   :    nsu_export_file -t <protocol used http|https|scp|ftp|tftp > -h <host name> -l <location to save file on serevr> [-p <port> -u <user-name> -x <password>] -o <filepath of the file to be exported>   
#Modification History:
#   04/23/2012:  Ankur Nath Mishra - Initial Version
#----------------------------------------------------------------------
usage()
{
  echo "Error:"
  echo "nsu_export_file -t <protocol used http|https|sftp|ftp|tftp > -h <host name> -l <location of file on serevr> [-p <port> -u <user-name> -x <password>] -o <filepath of the file to be exported>"
  exit -1
}
while getopts t:h:l:p:u:x:o: opt 
do
  case $opt in
    t) PROTO=$OPTARG
       if [ "XX$PROTO" == "XX" ];then
         PROTO="http"
       fi
       ;;
    h) HOST=$OPTARG
       if [ "XX$HOST" == "XX" ];then
         echo "Error: host name '-h' is a mandatory field"
         exit -1
       fi
       ;; 
    l) RLOC=$OPTARG
       if [ "XX$RLOC" == "XX" ];then
         echo "-l is a mandatory argument"
         exit -1
       fi
       ;;
    p) HOST="$HOST:$OPTARG" ;;
    u) USER_ARG="-u $OPTARG:" ;;
    x) USER_ARG="$USER_ARG$OPTARG" ;;
    o) OUT_FILE=$OPTARG
       if [ "XX$OUT_FILE" == "XX" ];then
         echo "Error: Destination file -o is a mandatory argument"
         exit -1
       fi
       ;;
    *) usage ;;
    ?) usage ;;
  esac
done
case $PROTO in
  "http") curl -f $PROTO://$HOST/$RLOC $USER_ARG  -o $OUT_FILE ;;
  "https") curl -k -f $PROTO://$HOST/$RLOC $USER_ARG -o $OUT_FILE ;;
  "ftp") curl $PROTO://$HOST/$RLOC $USER_ARG -o $OUT_FILE ;;
  "sftp") curl -k -T $OUT_FILE $PROTO://$HOST/$RLOC $USER_ARG;;
  "tftp") curl $PROTO://$HOST/$RLOC $USER_ARG -o $OUT_FILE ;;
  *) echo "Error $PROTO not supported"
     exit -1
     ;;
esac
if [ $? != 0 ];then
   echo "Error: Export to $HOST Failed"
   exit -1
fi

  echo "File $OUT_FILE sucessfully exported to $HOST"
  exit 0
