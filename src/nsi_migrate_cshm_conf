##############################################################################################
# Purpose : This shell will be migrating the old system health monitor conf of work controller.
#           If the conf file of cshm is old then it migrate it to new conf.
#
# Design  : This shell will add 1 after the keywords used for enable/disable of threads.
#
##############################################################################################

conf_path=/home/cavisson/work/system_health_monitor/conf/system_health_monitor.conf


sed -i 's/^COREINFO/COREINFO 1/g' $conf_path
sed -i 's/^FILE_SYSTEM_THRESHOLD/FILE_SYSTEM_THRESHOLD 1/g' $conf_path
sed -i '/^NUM_BUILDS_THRESHOLD_IN_REL_DIR/s|/[^ ]*|1|g' $conf_path
sed -i 's/^CHECK_MANDATORY_PROCESS/CHECK_MANDATORY_PROCESS 1/g' $conf_path
sed -i 's/^CHECK_UNWANTED_PROCESS/CHECK_UNWANTED_PROCESS 1/g' $conf_path
sed -i 's/^CHECK_MISSING_CONSTRAINT/CHECK_MISSING_CONSTRAINT 1/g' $conf_path
sed -i 's/^MAX_FILE_SIZE_IN_TMP/MAX_FILE_SIZE_IN_TMP 1/g' $conf_path
sed -i 's/^CHECK_UNEXPECTED_FILES_IN_DIR/CHECK_UNEXPECTED_FILES_IN_DIR 1/g' $conf_path
sed -i 's/^CHECK_NDP_DBU_PROGRESS/CHECK_NDP_DBU_PROGRESS 1/g' $conf_path
sed -i 's/^CHECK_RTG_PACKET_SIZE/CHECK_RTG_PACKET_SIZE 1/g' $conf_path
sed -i 's/^CHECK_PG_BULKLOAD_LOGS/CHECK_PG_BULKLOAD_LOGS 1/g' $conf_path
sed -i 's/^CHECK_METADATA_FILE_SIZE/CHECK_METADATA_FILE_SIZE 1/g' $conf_path
sed -i 's/^CHECK_DB_DUPLICATE_FILE/CHECK_DB_DUPLICATE_FILE 1/g' $conf_path



