# .nsi_workdir_profile

unset USERNAME
CONFIG=`egrep "^CONFIG" $HOME_DIR/etc/cav.conf | awk '{print $2}'`
if [ "XX$CONFIG" == "XX" ];then
  echo "Error: There is no value found for keyword 'CONFIG' in $CAV_CONF file"
  return 
fi

SERVER=server
if [ $CONFIG == "NO" ];then
   SERVER=serverNO
fi

echo "Entering"
echo "What Work env, you want to work with?"
echo "Enter 1 for work, 2 for work2 and 3 for work3 : "
read INP
while [ $INP != "1" -a $INP != "2" -a $INP != "3" ]
do
echo "Valid Inputs are 1, 2 or 3"
echo "Enter 1 for work, 2 for work2 and 3 for work3 : "
read INP
done

#Added by Neeraj
#export GUI_DATA=1
ulimit -c unlimited
if [ $INP = "1" ];then
export NS_WDIR=/home/cavisson/work
if [ -d /apps/apache-tomcat-7.0.59 ];then
   export TOMCAT_DIR=/apps/apache-tomcat-7.0.59
elif [ -d /apps/apache-tomcat-6.0.16 ];then
   export TOMCAT_DIR=/apps/apache-tomcat-6.0.16
else
   export TOMCAT_DIR=/apps/jakarta-tomcat-5.0.14
fi
export TOMCAT_CMD=tomcat
export NSSERVER_CMD=nsServer
export HPD_CMD=hpd
export SERVER_XML=${SERVER}.xml
#export FHOST=ftp.cavisson.com
#export FUSER=netstorm
#export FPASS=Cavisson!
#export FGDIR=/home/netstorm/rel
#export FNDIR=/home/netstorm/rel
export HPD_ROOT=/var/www/hpd
export LPS_CMD=lps
export NDC_CMD=ndc
export LPS_ROOT=/home/cavisson/work/lps
export FHOST=192.168.0.21
export FUSER=anil
export FPASS=changeit
export FGDIR=/home/anil/NS/cavisson/src/gui/export
export FNDIR=/home/anil/NS/cavisson/src/export
elif [ $INP = "2" ];then
export NS_WDIR=/home/cavisson/work2
if [ -d /apps2/apache-tomcat-7.0.59 ];then
   export TOMCAT_DIR=/apps2/apache-tomcat-7.0.59
elif [ -d /apps2/apache-tomcat-6.0.16 ];then
   export TOMCAT_DIR=/apps2/apache-tomcat-6.0.16
else
   export TOMCAT_DIR=/apps2/jakarta-tomcat-5.0.14
fi
export TOMCAT_CMD=tomcat2
export SERVER_XML=${SERVER}2.xml
export NSSERVER_CMD=nsServer2
export HPD_CMD=hpd2
export HPD_ROOT=/var/www2/hpd
export LPS_CMD=lps2
export NDC_CMD=ndc2
export LPS_ROOT=/home/cavisson/work2/lps
export FHOST=192.168.0.21
export FUSER=anil
export FPASS=changeit
export FGDIR=/home/anil/NS/cavisson/src/gui/export
export FNDIR=/home/anil/NS/cavisson/src/export
else
export NS_WDIR=/home/cavisson/work3
if [ -d /apps3/apache-tomcat-7.0.59 ];then
   export TOMCAT_DIR=/apps3/apache-tomcat-7.0.59
elif [ -d /apps3/apache-tomcat-6.0.16 ];then
   export TOMCAT_DIR=/apps3/apache-tomcat-6.0.16
else
   export TOMCAT_DIR=/apps3/jakarta-tomcat-5.0.14
fi
export TOMCAT_CMD=tomcat3
export NSSERVER_CMD=nsServer3
export HPD_CMD=hpd3
export SERVER_XML=${SERVER}3.xml
export HPD_ROOT=/var/www3/hpd
export LPS_CMD=lps3
export NDC_CMD=ndc3
export LPS_ROOT=/home/cavisson/work3/lps
export FHOST=192.168.0.21
export FUSER=anil
export FPASS=changeit
export FGDIR=/home/anil/NS/cavisson/src/gui/export
export FNDIR=/home/anil/NS/cavisson/src/export
fi

export PATH=/usr/local/pgsql/bin:$NS_WDIR/bin:$NS_WDIR/tools:$HOME_DIR/bin:$PATH
. ${NS_WDIR}/etc/cavisson.env
echo "NS_WDIR is set to $NS_WDIR"
cd $NS_WDIR

